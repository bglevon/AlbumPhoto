{% extends 'base.html.twig' %}

{% block title %}Mes photos{% endblock %}

{% block body %}
    <div class="content-container">
        <header>
            <h1 class="center-text">Mes images</h1>
            <h2 class="center-text">Ajouter ou supprimer vos photos en 2 cliques.</h2>
            <a href="{{path('app_add_photos')}}" class="myButton">Ajouter un photo</a>
        </header>

        <div class="count">
            Actuellement vous avez {{ pagination.getTotalItemCount }} photos
        </div>

        {% for photoItem in pagination %}
            <div class="portfolio-group">
                <a class="portfolio-item" href="{{path('app_photo', {'slug': photoItem.slug})}}">
                    <img src="{{asset('uploads/photos/thumbnails/' ~ photoItem.filename)}}" alt="{{photoItem.title}}">
                    <div class="detail">
                        <h3>{{photoItem.title}}</h3>
                        <span class="btn">Voir</span>
                    </div>
                </a>
            </div>
        {% endfor %}

        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>	<!-- /.content-container -->
{% endblock %}
